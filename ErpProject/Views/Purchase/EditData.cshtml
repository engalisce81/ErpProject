@model Purchase
@{
    ViewData["Title"] = "Update Purchase";
}
<link href="~/css/form.css" rel="stylesheet" />
<link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/flatpickr/dist/flatpickr.min.css">

<style>
    .validatin-dngare {
        color: red;
    }
</style>
<div class="form-flex">
    <div class="headtitle">
        <h3>Edit Purchase</h3>
    </div>
    <div class="form-content">
        <div class="hiderrcont" style="display: flex;">
            <h4 style="color: #177ae0 !important;border-bottom:solid #177ae0 1px  ;"><i class="fas fa-cogs"></i> Genral detailes</h4>         
        </div>
        <form asp-action="EditData" asp-controller="Purchase">
            <input asp-for="TotalAmount" type="hidden" placeholder="Purchase Postiton..." />                        
            <div class="custom-picker" style="width: 100%;">
                <label> Purchas Date</label>
                <input type="date" asp-for="PurchaseDate" id="styledDate" placeholder="Select Date" style="color: white;">
                <span class="validatin-dngare" asp-validation-for="PurchaseDate"></span>
            </div>
            <div class="form-input" style="width:100%; margin:10px 0px;">
                <label> Supplier Purchas</label>
                <select style="margin-top:5px" class="catigory" asp-for="SupplierId" asp-items="@ViewBag.Suppliers">
                </select>
            </div>
            <div class="submit-buuton">
                <button type="submit" class="submit1">
                    Edit Purchas<i class="fas fa-arrow-right" style="padding-left:8px; "></i>
                </button>
            </div>
           
        </form>
    </div>
</div>
@section Scripts {
    <partial name="_ValidationScriptsPartial" />
    <script src="https://cdn.jsdelivr.net/npm/flatpickr"></script>
    <script>
        flatpickr("#styledDate", {
            altInput: true,
            altFormat: "F j, Y",
            dateFormat: "Y-m-d",
        });
    </script>
}