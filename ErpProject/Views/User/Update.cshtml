@model UserUpdateVM
@{
    Layout = null;

}
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Sign In Page</title>
    <link href="~/css/Account.css" rel="stylesheet" />
</head>
<body>
    <div class="container">
        <div class="header">
            <h1>Welcome </h1>
            <p>Please Update account</p>
        </div>
        

        <form asp-action="Update">
            <div class="form-group">
                <label asp-for="Name">Name</label>
                <input type="text" asp-for="Name" placeholder="Name...">
                <span asp-validation-for="Name"></span>

            </div>
            <div class="form-group">
                <label asp-for="Email">Email</label>
                <input type="email" id="email" asp-for="Email" placeholder="erp.com..." />
                <span asp-validation-for="Email"></span>
            </div>

            <div class="form-group">
                <label asp-for="CurrentPassword">Current Password</label>
                <input type="password" id="CurrentPassword" asp-for="CurrentPassword" placeholder="Password...">
                <span asp-validation-for="CurrentPassword"></span>

            </div>
            <div class="form-group">
                <label asp-for="NewPassword">New Password</label>
                <input type="password" id="NewPassword" asp-for="NewPassword" placeholder="Password...">
                <span asp-validation-for="NewPassword"></span>

            </div>

            <div class="form-group">
                <label asp-for="ConfiermPassword"> Conferm Password</label>
                <input type="password" id="password" asp-for="ConfiermPassword" placeholder="Password...">
                <span asp-validation-for="ConfiermPassword"></span>

            </div>

            <div style="width:100%;display:flex;align-items:center;justify-content:space-evenly;">
                @for(int i=0;i<Model.RoleVMs.Count;i++)
                {
                    <input type="hidden" asp-for="RoleVMs[i].Name" />
                    <div>
                        <input type="checkbox" asp-for="RoleVMs[i].IsInRole"  />
                        <label asp-for="RoleVMs[i].IsInRole"> @Model.RoleVMs[i].Name</label>
                    </div>
                }
            </div>

            <div asp-validation-summary="All"></div>

            <button type="submit">Update Account</button>

            <div class="forgot-password">
                <a href="#">Forgot Password?</a>
            </div>
        </form>


    </div>
</body>
</html>
