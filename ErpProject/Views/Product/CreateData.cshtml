@model Product
@{
    ViewData["Title"] = "Creat Product";
}
<link href="~/css/form.css" rel="stylesheet"/>
<link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/flatpickr/dist/flatpickr.min.css">

<style>
    .validatin-dngare{
        color:red;
    }
</style>
<div class="form-flex">
    <div class="headtitle">
        <h3>Creat Product</h3>
    </div>
    <div class="form-content">
        <div class="hiderrcont" style="display: flex;">
            <h4 style="color: #177ae0 !important;border-bottom:solid #177ae0 1px  ;"><i class="fas fa-cogs"></i> Genral detailes</h4>
        </div>
        <form asp-action="CreateData" asp-controller="Product">
            <div class="form-group-2">
                <div class="form-groupflex">
                    <div class="form-label">
                        <label  asp-for="Name">Product Name</label>
                    </div>
                    <div class="form-input">
                        <input type="text" asp-for="Name" placeholder=" Product Name..."/>
                    </div>
                    <span class="validatin-dngare" asp-validation-for="Name"></span>
                </div>
                <div class="form-groupflex">
                    <div class="form-label">
                        <label asp-for="Price" >Product Price</label>
                    </div>
                    <div class="form-input">
                        <input type="text" asp-for="Price" placeholder="Product Price..." />
                    </div>
                    <span class="validatin-dngare" asp-validation-for="Price"></span>
                </div>
            </div>
                   
            <div class="form-group" style="display:flex;align-items:center; justify-content:space-between;">
                <div class="form-group-2" >
                    <div class="form-groupflex" style="width:96%;">
                        <div class="form-label">
                            <label asp-for="Description" >Product Description</label>
                        </div>
                        <div class="form-input">
                            <textarea id="w3review" asp-for="Description" class="sumarry">At w3schools.com you will learn how to make a website. They offer free tutorials in all web development technologies.></textarea>
                        </div>
                        <span class="validatin-dngare" asp-validation-for="Description"></span>
                    </div>
                </div>
                <div style="width:96%;">
                    <div class="form-groupflex">
                        <div class="form-label">
                            <label asp-for="CatigoryId">Product Catigory</label>
                        </div>
                        <div class="form-input">
                            <select asp-for="CatigoryId" asp-items="@ViewBag.Catigores"></select>
                        </div>
                        <span class="validatin-dngare" asp-validation-for="CatigoryId"></span>
                    </div>
                </div>
            </div>

            

           
            <div class="submit-buuton">
                <button type="submit" class="submit1" >
                    Creat Product<i class="fas fa-arrow-right" style="padding-left:8px; "></i>
                </button>
            </div>
                
    </form>
    </div>
</div>
@section Scripts {
    <partial name="_ValidationScriptsPartial" />
    <script src="https://cdn.jsdelivr.net/npm/flatpickr"></script>
}
