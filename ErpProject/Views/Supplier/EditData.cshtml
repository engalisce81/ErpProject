@model StepData
@{
    ViewData["Title"] = "Update Supplier";
}
<link href="~/css/form.css" rel="stylesheet" />
<style>
    .validatin-dngare{
        color:red;
    }
</style>
<div class="form-flex">
    <div class="headtitle">
        <h3>Edit Supplier</h3>
    </div>
    <div class="form-content">
        <div class="hiderrcont" style="display: flex;">
            <h4 style="color: #177ae0 !important;border-bottom:solid #177ae0 1px  ;"><i class="fas fa-cogs"></i> Genral detailes</h4>
        </div>
        <form asp-action="EditData" asp-controller="Supplier">
            <div class="form-group-2">
                <div class="form-groupflex">
                    <div class="form-label">
                        <label asp-for="Name">Supplier Name</label>
                    </div>
                    <div class="form-input">
                        <input type="text" asp-for="Name" placeholder=" Supplier Name..." />
                    </div>
                    <span class="validatin-dngare" asp-validation-for="Name"></span>

                </div>
                <div class="form-groupflex">
                    <div class="form-label">
                        <label asp-for="Email">Supplier Email</label>
                    </div>
                    <div class="form-input">
                        <input type="text" asp-for="Email" placeholder="Supplier Email..." />
                    </div>
                    <span class="validatin-dngare" asp-validation-for="Email"></span>

                </div>
            </div>

            <div class="form-group">
                <div class="form-groupflex">
                    <div class="form-label">
                        <label asp-for="Description">Supplier Description</label>
                    </div>
                    <div class="form-input">
                        <textarea id="w3review" class="Description" asp-for="Description">
                        </textarea>
                    </div>
                    <span class="validatin-dngare" asp-validation-for="Description"></span>

                </div>
            </div>

            <div class="form-group">
                <div class="form-group-2">
                    <div class="form-groupflex">
                        <div class="form-label">
                            <label asp-for="Summary">Supplier Summary</label>
                        </div>
                        <div class="form-input">
                            <textarea id="w3review" asp-for="Summary" class="sumarry">At w3schools.com you will learn how to make a website. They offer free tutorials in all web development technologies.></textarea>
                        </div>
                        <span class="validatin-dngare" asp-validation-for="Summary"></span>

                    </div>

                    <div class="form-group-noflex" style="width:48%; ">
                        <div class="form-groupflex" style="width: 100% !important;">
                            <div class="form-label">
                                <label asp-for="Phone">Supplier Phone</label>
                            </div>
                            <div class="form-input">
                                <input type="text" asp-for="Phone" placeholder="Supplier Phone..." style="margin-top:5px" />
                            </div>
                            <span class="validatin-dngare" asp-validation-for="Phone"></span>

                        </div>
                        <div class="form-groupflex" style="width: 100% !important;">
                            <div class="form-label">
                                <label asp-for="Address">Supplier Address</label>
                            </div>
                            <div class="form-input">
                                <input type="text" asp-for="Address" placeholder="Supplier Address..." style="margin-top:5px" />
                            </div>
                            <span class="validatin-dngare" asp-validation-for="Address"></span>

                        </div>
                    </div>
                </div>
            </div>

            <div class="form-group">
                <div class="form-groupflex">
                    <div class="form-label">
                        <label asp-for="Comment">Comment</label>
                    </div>
                    <div class="form-input">
                        <input asp-for="Comment" type="text" placeholder="Supplier Comment..." />
                    </div>
                    <span class="validatin-dngare" asp-validation-for="Comment"></span>

                </div>
            </div>

            <div class="submit-buuton">
                <button type="submit" class="submit1">
                    Edit Data<i class="fas fa-arrow-right" style="padding-left:8px; "></i>
                </button>
            </div>

        </form>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}

