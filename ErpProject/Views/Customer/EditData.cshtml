@model Customer

@{
    ViewData["Title"] = "Update Customer ";
}
<link href="~/css/form.css" rel="stylesheet" />
<link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/flatpickr/dist/flatpickr.min.css">

<style>
    .validatin-dngare {
        color: red;
    }
</style>
<div class="form-flex">
    <div class="headtitle">
        <h3>Creat Customer</h3>
    </div>
    <div class="form-content">
        <div class="hiderrcont" style="display: flex;">
            <h4 style="color: #177ae0 !important;border-bottom:solid #177ae0 1px  ;"><i class="fas fa-cogs"></i> Genral detailes</h4>
            <h4><i class="fas fa-cogs"></i> Customer Image</h4>
            <h4><i class="fas fa-cogs"></i> finish</h4>
        </div>
        <form asp-action="EditData" asp-controller="Customer">
            <div class="form-group-2">
                <div class="form-groupflex">
                    <div class="form-label">
                        <label asp-for="Name">Customer Name</label>
                    </div>
                    <div class="form-input">
                        <input type="text" asp-for="Name" placeholder=" Customer Name..." />
                    </div>
                    <span class="validatin-dngare" asp-validation-for="Name"></span>
                </div>
                <div class="form-groupflex">
                    <div class="form-label">
                        <label asp-for="Email">Customer Email</label>
                    </div>
                    <div class="form-input">
                        <input type="text" asp-for="Email" placeholder="Customer Email..." />
                    </div>
                    <span class="validatin-dngare" asp-validation-for="Email"></span>
                </div>
            </div>

            <div class="form-group-2">
                <div class="form-groupflex">
                    <div class="form-label">
                        <label asp-for="Name">Customer Name</label>
                    </div>
                    <div class="form-input">
                        <input type="text" asp-for="Phone" placeholder=" Customer Phone..." />
                    </div>
                    <span class="validatin-dngare" asp-validation-for="Phone"></span>
                </div>
                <div class="form-groupflex">
                    <div class="form-label">
                        <label asp-for="Address">Customer Email</label>
                    </div>
                    <div class="form-input">
                        <input type="text" asp-for="Address" placeholder="Customer Address..." />
                    </div>
                    <span class="validatin-dngare" asp-validation-for="Address"></span>
                </div>
            </div>

            <div class="submit-buuton">
                <button type="submit" class="submit1">
                    Next step<i class="fas fa-arrow-right" style="padding-left:8px; "></i>
                </button>
            </div>

        </form>
    </div>
</div>
@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}


